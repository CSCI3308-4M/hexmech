extends layout

block postscripts
  script(src="javascripts/bundles/libs.js")

block content
  .login.well
    .center
      h1=title
      hr
      h2 Login
      hr
    include messages
    form(id="loginForm", name="login", action=loginURL, method="post")
      .form-group
        label(for="username") Username
        input(
          type="text",
          name="username",
          id="username",
          class="form-control",
          placeholder="Enter username"
          value=prefill?prefill.username:"")
      .form-group
        label(for="password") Password
        input(
          type="password",
          name="password",
          id="password",
          class="form-control",
          placeholder="Enter password",
          value=prefill?prefill.password:"")
      .form-group.center
        button.btn.btn-default.wide Register
    p Don't have an account: #[a(href= signupURL) Signup]
