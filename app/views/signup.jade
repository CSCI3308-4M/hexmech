extends layout

block postscripts
  script(src="javascripts/bundles/libs.js")
  script(src="javascripts/bundles/signup.js")

block content
  .login.well
    .center
      h1= title
      hr
      h2 Sign Up
      hr
    form(id="loginForm", name="signup", action="signup", method="post")
      .form-group
        label(for="displayName") Display Name
        input(type="text", name="displayName", id="displayName",
          class="form-control", placeholder="Enter display name")
      .form-group
        label(for="username") Username
        input(type="text", name="username", id="username", class="form-control",
          placeholder="Enter username")
      .form-group
        label(for="email") Email
        input(type="text", name="email", id="email", class="form-control",
          placeholder="Enter email" required)
      .form-group
        label(for="confirmEmail") Confirm Email
        input(type="text", name="confirmEmail", id="confirmEmail",
          class="form-control",
          placeholder="Confirm email")
      .form-group
        label(for="password") Password
        input(type="password", name="password", id="password", class="form-control",
          placeholder="Enter password")
      .form-group
        label(for="confirmPassword") Confirm Password
        input(type="password", name="confirmPassword", id="confirmPassword",
          class="form-control", placeholder="Confirm password")
      .form-group.center
        button.btn.btn-default.wide Register
    p Already have an account: #[a(href="login") Login]
