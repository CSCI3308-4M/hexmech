{
  "tags": {
    "allowUknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": ["./"],
    "exclude": ["./node_modules", "./doc"],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "template": "templates/default",
    "destination": "./doc/",
    "recurse": true
  },
  "plugins": [
    "plugins/markdown"
  ]
}
